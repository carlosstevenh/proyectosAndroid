<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginTop="2dp"
    android:layout_margin="@dimen/normal_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_prueba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/itemCardViewDescriptionPrueba"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical"
                android:background="@color/colorBackgroundCardView"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/tv_title_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_propiedad"
                    android:drawableStart="@drawable/ic_propiedad"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="@string/list_monitoring_card_view_item_property"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Huaricashash"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_title_variable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_variable_small"
                    android:drawableStart="@drawable/ic_variable_small"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="@string/list_monitoring_card_view_item_variable"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_variable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_title_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_date_color"
                    android:drawableStart="@drawable/ic_date_color"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="@string/list_monitoring_card_view_item_date"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title_latitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_latitude"
                        android:drawableStart="@drawable/ic_latitude"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="start"
                        android:text="@string/list_monitoring_card_view_item_latitude"
                        android:textColor="@color/colorIconCardView"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_latitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_title_longitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_length"
                    android:drawableStart="@drawable/ic_length"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="@string/list_monitoring_card_view_item_length"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_longitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>