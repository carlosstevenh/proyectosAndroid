<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_normal"
        android:drawableStart="@drawable/ic_normal"
        android:padding="@dimen/title_padding"
        android:textSize="18sp"
        android:text="INFORMACIÓN"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorTextIcons" />

    <TextView
        android:id="@+id/tv_description_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dialog_body"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:text="Selecciona un área para registrar un Monitoreo"/>


</LinearLayout>