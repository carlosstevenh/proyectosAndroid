<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_factor_small"
                android:drawableStart="@drawable/ic_factor_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/list_critical_points_card_view_item_factor"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_title_variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_variable_small"
                android:drawableStart="@drawable/ic_variable_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/list_critical_points_card_view_item_variable"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_title_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_propiedad"
                android:drawableStart="@drawable/ic_propiedad"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/list_critical_points_card_view_item_property"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/ic_country"
                    android:drawableStart="@drawable/ic_country"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="@string/list_critical_points_card_view_item_country"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_title_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/ic_date_color"
                    android:drawableStart="@drawable/ic_date_color"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="@string/list_critical_points_card_view_item_date"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextCardView"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
