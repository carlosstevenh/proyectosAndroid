<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_stadistic_pa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/graph_percentage_frequency_subtitle_horizontal"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:scrollbars="horizontal"
                    android:textColor="@color/colorSecondaryText"
                    android:text="@string/graph_percentage_frequency_subtitle_vertical"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <include layout="@layout/grafica_estadistica" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_monitoreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/colorPrimaryLight"
                android:padding="5dp"
                android:text="@string/graph_percentage_frequency_subtitle_info"
                android:textColor="@color/colorTextIcons"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divisor1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".5"
                android:background="@color/colorDivider"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_title_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_factor_small"
                android:drawableStart="@drawable/ic_factor_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/info_critical_point_item_factor"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divisor2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".5"
                android:background="@color/colorDivider"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_title_variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_variable_small"
                android:drawableStart="@drawable/ic_variable_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/info_critical_point_item_variable"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divisor3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".5"
                android:background="@color/colorDivider"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_title_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_color"
                android:drawableStart="@drawable/ic_date_color"
                android:drawablePadding="4dp"
                android:tint="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/info_critical_point_item_date"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divisor4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".5"
                android:background="@color/colorDivider"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_title_puntaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_select_small"
                android:drawableStart="@drawable/ic_select_small"
                android:drawablePadding="4dp"
                android:tint="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/graph_percentage_frequency_item_Puntaje"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_puntaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divisor5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".5"
                android:background="@color/colorDivider"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_title_porcentaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_select_small"
                android:drawableStart="@drawable/ic_select_small"
                android:drawablePadding="4dp"
                android:tint="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/summary_item_title_percentage"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_porcentaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divisor6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".5"
                android:background="@color/colorDivider"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_title_frecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_select_small"
                android:drawableStart="@drawable/ic_select_small"
                android:drawablePadding="4dp"
                android:tint="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:text="@string/summary_item_title_frequency"
                android:textColor="@color/colorIconCardView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_frecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextCardView"
                android:textSize="12sp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>